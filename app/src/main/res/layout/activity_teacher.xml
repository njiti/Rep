<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacherActivity"
    android:background="@color/purple_700">

    <ImageView
        android:id="@+id/teacher"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/teacher" />

    <TextView
        android:id="@+id/fname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="DR. Samuel "
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/grey"
        android:layout_below="@+id/teacher"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/sname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fname"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:text="Nyamboka"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/PieChart"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/teacher"
        android:src="@drawable/dougant_graph" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/PieChart1"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/PieChart"
        android:src="@drawable/dougant_graph" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/PieChart2"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/PieChart1"
        android:src="@drawable/dougant_graph" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sname"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineGraph"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Today we got to learn alot from her appreciate the "
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:text="But didn't really get to get everything as Francis kept on mirroring what the teacher said"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_speaker"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_repeat"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="160dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_upward"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="330dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>